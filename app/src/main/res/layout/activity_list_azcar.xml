<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.ahmedco.tasbeh_5.activities.ListAzcarActivity">


    <Button
        android:layout_gravity="center"
        android:id="@+id/button_row_listazcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="confirmConfiguration"
        android:text="Confirm"
        />



    <ScrollView
        android:paddingTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/r1"
            layout="@layout/row_list_azcar"/>
        <include layout="@layout/row_list_azcar"
            android:id="@+id/r2"/>
        <include
            layout="@layout/row_list_azcar" android:id="@+id/r3"/>
        <include
            layout="@layout/row_list_azcar" android:id="@+id/r4"/>
        <include
            layout="@layout/row_list_azcar" android:id="@+id/r5"/>
        <include
            layout="@layout/row_list_azcar" android:id="@+id/r6"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>